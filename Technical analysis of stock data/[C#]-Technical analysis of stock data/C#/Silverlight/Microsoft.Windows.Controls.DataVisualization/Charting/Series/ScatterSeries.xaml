<ResourceDictionary
    xmlns="http://schemas.microsoft.com/client/2007"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:charting="clr-namespace:Microsoft.Windows.Controls.DataVisualization.Charting">
    <Style TargetType="charting:ScatterSeries">
        <Setter Property="MarkerHeight" Value="8"/>
        <Setter Property="MarkerWidth" Value="8"/>
        <Setter Property="IsTabStop" Value="False"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="charting:ScatterSeries">
                    <Canvas x:Name="PlotArea"/>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>